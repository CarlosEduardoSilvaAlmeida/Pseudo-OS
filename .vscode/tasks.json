{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build project",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-std=c99",
                "-Wall",
                "-Wextra",
                "-I./include",
                "-I./src",
                "tests/test_process.c",
                "src/process/process.c",
                "src/process/scheduler.c",
                "src/process/dispatcher.c",
                "-o",
                "test_process.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}